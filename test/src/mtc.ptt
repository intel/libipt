; Test MTC-based timing.
;
; Variant: No calibration needed.
;
; opt:ptdump --time --time-delta --no-tcal --no-wall-clock
; opt:ptdump --mtc-freq 8 --cpuid-0x15.eax 1 --cpuid-0x15.ebx 4

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: psbend()

; @pt p3: mtc(0xc1)
; @pt p4: mtc(0xc2)
; @pt p5: mtc(0xc4)


; @pt .exp(ptdump)
;%0p1   psb
;%0p2   psbend
;%0p3   mtc  c1          tsc +0
;%0p4   mtc  c2          tsc +400
;%0p5   mtc  c4          tsc +800
