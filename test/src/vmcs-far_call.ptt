; Test that VMCS binds to a far branch
;

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: mode.exec(64bit)
; @pt p3: fup(3: %l1)
; @pt p4: psbend()
l1:     nop

; @pt p5: vmcs(0xcdcdc000)
; @pt p6: tip(3: %l4)
l2:     call far [rax] ; l4
l3:     hlt

l4:     nop

; @pt p7: fup(1: %l5)
; @pt p8: tip.pgd(0: %l6)
l5:     nop
l6:     hlt


