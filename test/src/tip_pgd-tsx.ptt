; Test that TSX state is applied correctly when branch tracing is disabled.
;

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: mode.exec(64bit)
; @pt p3: psbend()

; @pt p4: mode.tsx(begin)
; @pt p5: tip.pge(3: %l1)
l1:     nop

; @pt p6: fup(1: %l2)
; @pt p7: tip.pgd(0: %l3)
l2:     nop
l3:     hlt

; @pt p8: mode.tsx(abort)
; @pt p9: tip.pge(3: %l4)
l4:     nop

; @pt p10: fup(1: %l5)
; @pt p11: tip.pgd(0: %l6)
l5:     nop
l6:     hlt


