; Test an execution stop event.
;
; Variant: before the first instruction, tracing starts disabled
;

org 0x1000
bits 64

; @pt p0: psb()
; @pt p1: mode.exec(64bit)
; @pt p2: psbend()

; @pt p3: tip.pge(3: %l0)
l0: nop

; @pt p4: exstop(ip)
; @pt p5: fup(1: %l0)

; @pt p6:fup(1: %l1)
; @pt p7:tip.pgd(0: %l1)
l1: hlt

