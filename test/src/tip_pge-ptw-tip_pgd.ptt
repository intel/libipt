; Test PTW
;
; Variant: tracing is enabled, no FUP on PTW
;

org 0x100000
bits 64

; @pt p0: psb()
; @pt p1: fup(3: %l0)
; @pt p2: mode.exec(64bit)
; @pt p3: psbend()
l0: nop

; @pt p4: ptw(0: 0xabcd)
l1: db 0xf3, 0x0f, 0xae, 0xe0           ; ptwrite eax

; @pt p5: ptw(1: 0xef09)
l2: db 0xf3, 0x48, 0x0f, 0xae, 0xe0     ; ptwrite rax
l3: nop

; @pt p6: fup(1: %l4)
; @pt p7: tip.pgd(0: %l5)
l4: nop
l5: hlt


