; Test that TSX status updates in adjacent PSB+ do not cause spurious
; commit indications.
;

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: fup(3: %l1)
; @pt p3: mode.exec(64bit)
; @pt p4: mode.tsx(commit)
; @pt p5: psbend()
l1:     nop

; @pt p6: psb()
; @pt p7: fup(3: %l2)
; @pt p8: mode.exec(64bit)
; @pt p9: mode.tsx(commit)
; @pt p10: psbend()
l2:     nop

; @pt p11: fup(1: %l3)
; @pt p12: tip.pgd(0: %l4)
l3:     nop
l4:     hlt

