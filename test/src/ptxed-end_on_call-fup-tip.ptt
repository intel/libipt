; Test the end-on-call block decoder option.
;
; Variant: there's an async branch event right at the call destination
;
; opt:ptxed --block-decoder --block:show-blocks --block:end-on-call

org 0x1000
bits 64

; @pt p0: psb()
; @pt p1: mode.exec(64bit)
; @pt p2: fup(3: %l0)
; @pt p3: psbend()
l0: nop
l1: call l3
l2: hlt

; @pt p4: fup(1: %l3)
; @pt p5: tip(1: %l5)
l3: nop
l4: hlt

; @pt p6: fup(1: %l6)
; @pt p7: tip.pgd(0: %l6)
l5: nop
l6: hlt


; @pt .exp(ptdump)
;%0p0  psb
;%0p1  mode.exec  cs.l
;%0p2  fup        3: %?l0
;%0p3  psbend
;%0p4  fup        1: %?l3.2
;%0p5  tip        1: %?l5.2
;%0p6  fup        1: %?l6.2
;%0p7  tip.pgd    0: %?l6.0


