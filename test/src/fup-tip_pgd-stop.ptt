; Test that TraceStop is applied to the same instruction as a preceding TIP.PGD.
;
; Variant: encountered during normal tracing.
;

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: mode.exec(64bit)
; @pt p3: fup(3: %l1)
; @pt p4: psbend()
l1:     nop


; @pt p5: fup(1: %l2)
; @pt p6: tip.pgd(0: %l3)
; @pt p7: stop()
l2:     nop
l3:     hlt

