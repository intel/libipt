; Test spurious MODE.EXEC.
;
; This is an artificial test to ensure that no event decode internal
; events escape to libipt users.
;
; opt:ptxed --event:iflags
;

org 0x1000
bits 64

; @pt p0: psb()
; @pt p1: mode.exec(64bit)
; @pt p2: psbend()

; @pt p3: mode.exec(64bit)
; @pt p4: tip.pge(3: %l0)
l0: nop

; @pt p5: mode.exec(64bit)
; @pt p6: fup(1: %l2)
l1: nop
l2: call rax
l3: hlt

; @pt p7: mode.exec(64bit)
; @pt p8: tip(1: %l4)
l4: nop

; @pt p9:fup(1: %l5)
; @pt p10:tip.pgd(0: %l5)
l5: hlt


; @pt .exp(ptdump)
;%0p0  psb
;%0p1  mode.exec  cs.l
;%0p2  psbend
;%0p3  mode.exec  cs.l
;%0p4  tip.pge    3: %?l0
;%0p5  mode.exec  cs.l
;%0p6  fup        1: %?l2.2
;%0p7  mode.exec  cs.l
;%0p8  tip        1: %?l4.2
;%0p9  fup        1: %?l5.2
;%0p10 tip.pgd    0: %?l5.0


