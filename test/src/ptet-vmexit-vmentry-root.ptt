; Test that a VMexit followed by a VMentry are decoded correctly.
;
; Variant: event tracing enabled
;          tracing root
;

org 0x100000
bits 64

; @pt p0: psb()
; @pt p2: mode.exec(64bit, if)
; @pt p3: psbend()

; @pt p4: evd(1: 0xf00baa)
; @pt p5: evd(2: 0)
; @pt p6: cfe(9: 14)
; @pt p8: tip.pge(3: %l5)
; ...
; @pt p9: cfe(7)
; @pt p10: tip.pgd(0: %l1)
l1: mov rax, [rbx]

; @pt p14: tip.pge(3: %l7)
; ...
; @pt p15: cfe(7)
; @pt p16: tip.pgd(0: %l3)
l2: cpuid
l3: nop

l5: vmresume
l6: hlt

l7: vmresume
l8: hlt


