; Test an instruction crossing section boundaries.
;
; opt:ptxed --raw truncated.bin:0x2:0x1002
;

org 0x1000
bits 64

; @pt p0: psb()
; @pt p1: mode.exec(64bit)
; @pt p2: fup(3: %l0)
; @pt p3: psbend()
l0: nop

l1: jmp l3
l2: hlt

l3: nop

; @pt p4: fup(1: %l4)
; @pt p5: tip.pgd(0: %l4)
l4: hlt


