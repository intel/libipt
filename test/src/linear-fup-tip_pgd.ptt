; Test a rather long linear trace.  To keep the test file small, we only check
; the number of instructions.
;
;   opt:ptxed --quiet --stat --stat:insn
;
; Variant:  linear trace ends with disabled event.
;

org 0x100000
bits 64

; @pt p1: psb()
; @pt p2: fup(3: %l0)
; @pt p3: mode.exec(64bit)
; @pt p4: psbend()
l0:     times 100000 nop

l1:     hlt
; @pt p5: fup(2: %l1)
; @pt p6: tip.pgd(0: %l1)


; @pt .exp(ptdump)
;%0p1  psb
;%0p2  fup        3: %?l0
;%0p3  mode.exec  cs.l
;%0p4  psbend
;%0p5  fup        2: %?l1.4
;%0p6  tip.pgd    0: %?l1.0


; @pt .exp(ptxed)
;insn:  100000.
