;%0s0  PERF_RECORD_MMAP 1/1, ffffffff80000000, 3, 0, pevent-comm_exec-mmap-tsc-iret.bin  { 0 }
;%0s1  PERF_RECORD_ITRACE_START 1/1  { 0 }
;%0l0 # nop
;%0l1 # iret
